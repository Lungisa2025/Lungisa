<!-- Admin panel for viewing and managing newsletter subscribers. Displays subscriber email addresses and subscription dates. 
    Admins can send notifications directly to subscribers. -->

@model List<Lungisa.Models.SubscriberModel>

@{
    ViewBag.Title = "Subscriptions";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <!-- Meta -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <!-- Title -->
    <title>Subscribers</title>

    <!-- Links -->
    <link rel="stylesheet" href="~/Content/formStyle.css" />
    <link rel="stylesheet" href="~/css/formStyle.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Google fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet" />
</head>
<body>
    <!-- ================= ADMIN HEADER AND NAVIGATION ================= -->
    <header>
        <a class="logo" href="/">
            <img src="~/Content/Images/LungisaLogo.png" alt="Lungisa Logo">
        </a>

        <!-- hamburger -->
        <button class="menu-toggle" aria-label="Toggle navigation" aria-controls="main-nav" aria-expanded="false">
            <span></span><span></span><span></span>
        </button>

        <!-- nav wrapper -->
        <nav id="main-nav" class="main-nav">
            <ul>
                <li><a href="/Admin/AdminDashboard" class="nav-link">DASHBOARD</a></li>
                <li><a href="/DonationsAdmin" class="nav-link">DONATIONS</a></li>
                <li><a href="/Projects" class="nav-link">PROJECTS</a></li>
                <li><a href="/Events" class="nav-link">EVENTS</a></li>
                <li><a href="/NewsAdmin" class="nav-link">NEWS</a></li>
                <li><a href="/Volunteers" class="nav-link ">VOLUNTEERS</a></li>
                <li><a href="/Subscribers" class="nav-link active">SUBSCRIBERS</a></li>
                <li><a href="/Contacts" class="nav-link">CONTACT</a></li>
            </ul>
        </nav>

    </header>

    </br>
    </br>   

    <section class="section-card2">
        <h1>Subscriber List</h1>

        @if (TempData["Success"] != null)
        {
            <p style="color:green;">@TempData["Success"]</p>
        }
        @if (TempData["Error"] != null)
        {
            <p style="color:red;">@TempData["Error"]</p>
        }
        <!-- Button to send a message to all subscribers -->
        <button class="btn-sendAll" onclick="openBulkNotifyModal()">Send Message to All Subscribers</button>
        <br />
        <br />
        <div class="table-container">
            <table border="1" cellpadding="5" cellspacing="0">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Date Subscribed</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sub in Model)
                    {
                        <tr>
                            <td>@sub.Email</td>
                            <td>@sub.Date</td>
                            <td>
                                <form action="/Subscribers/NotifySubscriber" method="post" style="display:inline;">
                                    <input type="hidden" name="email" value="@sub.Email" />
                                    <input type="hidden" name="name" value="@sub.Email" /> @* Use email as name if no name stored *@
                                    <button class="btn-notify" type="submit">Notify</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </section>
    <div id="bulkNotifyModal" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%;
                                 background:rgba(0,0,0,0.5); justify-content:center; align-items:center;">
        <div style="background:#fff; padding:20px; border-radius:10px; width:400px; position:relative;">
            <span style="position:absolute; top:10px; right:15px; cursor:pointer;" onclick="closeBulkNotifyModal()">X</span>
            <h3>Send Message to All Subscribers</h3>
            <form method="post" action="/Subscribers/NotifyAllSubscribers">
                <textarea name="message" placeholder="Type your message here..."
                          style="width:100%; height:150px; margin-top:10px;" required></textarea>
                <button type="submit" class="btn-sendAll" style="margin-top:10px;">Send</button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous">
    </script>
    <script>
        (function () {
            const btn = document.querySelector('.menu-toggle');
            const nav = document.getElementById('main-nav');
            if (!btn || !nav) return;

            btn.addEventListener('click', () => {
                const isOpen = nav.classList.toggle('open');
                btn.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
            });
        })();
    </script>
    <script>
        function openBulkNotifyModal() {
            document.getElementById('bulkNotifyModal').style.display = 'flex';
        }

        function closeBulkNotifyModal() {
            document.getElementById('bulkNotifyModal').style.display = 'none';
        }

    </script>
</body>
</html>
